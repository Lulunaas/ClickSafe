{
    "manifest_version": 3,
    "name": "ClickSafe",
    "version": "1.0",
    "description": "Send the current URL to a machine learning model via Flask API.",
    "permissions": [
        "activeTab",
        "tabs",
        "webRequest",
        "notifications"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}